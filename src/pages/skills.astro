---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SkillsHero from "@/components/skills/SkillsHero.astro";
import EngineeringSkills from "@/components/skills/EngineeringSkills.astro";
import AISkills from "@/components/skills/AISkills.astro";
import SkillsCTA from "@/components/skills/SkillsCTA.astro";
---

<BaseLayout>
    <main
        class="flex-1 flex flex-col items-center w-full px-6 lg:px-20 py-12 lg:py-24"
    >
        <div class="max-w-6xl w-full flex flex-col gap-16">
            <SkillsHero />

            <div
                class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-start"
            >
                <EngineeringSkills />
                <AISkills />
            </div>

            <SkillsCTA />
        </div>
    </main>
</BaseLayout>
