---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ContactHero from "@/components/contact/ContactHero.astro";
import ContactServices from "@/components/contact/ContactServices.astro";
import AvailabilityInfo from "@/components/contact/AvailabilityInfo.astro";
import ContactForm from "@/components/contact/ContactForm.astro";
---

<BaseLayout>
    <main
        class="flex-1 flex flex-col items-center w-full px-6 lg:px-20 py-12 lg:py-24"
    >
        <div class="max-w-[1200px] w-full flex flex-col gap-12 lg:gap-16">
            <ContactHero />

            <div
                class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24 items-start"
            >
                <!-- Sidebar: Info & Services -->
                <div
                    class="lg:col-span-5 flex flex-col gap-10 lg:sticky lg:top-32"
                >
                    <ContactServices />
                    <AvailabilityInfo />
                </div>

                <!-- Main: Form -->
                <div class="lg:col-span-7">
                    <ContactForm />
                </div>
            </div>
        </div>
    </main>
</BaseLayout>
