<div
    class="bg-white dark:bg-gray-900 p-8 md:p-12 rounded-[2.5rem] shadow-2xl shadow-cyan-900/10 dark:shadow-none border border-gray-100 dark:border-gray-800"
>
    <form class="flex flex-col gap-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Name Field -->
            <label class="flex flex-col gap-2.5">
                <span
                    class="text-gray-900 dark:text-gray-100 text-sm font-bold ml-1"
                    >Nombre completo</span
                >
                <input
                    class="flex w-full rounded-2xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 px-5 py-4 text-base text-gray-900 dark:text-white placeholder:text-gray-400 focus:border-cyan-600 focus:ring-2 focus:ring-cyan-600/20 transition-all outline-none font-medium"
                    placeholder="Ej. Juan Pérez"
                    type="text"
                    required
                />
            </label>
            <!-- Email Field -->
            <label class="flex flex-col gap-2.5">
                <span
                    class="text-gray-900 dark:text-gray-100 text-sm font-bold ml-1"
                    >Correo corporativo</span
                >
                <input
                    class="flex w-full rounded-2xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 px-5 py-4 text-base text-gray-900 dark:text-white placeholder:text-gray-400 focus:border-cyan-600 focus:ring-2 focus:ring-cyan-600/20 transition-all outline-none font-medium"
                    placeholder="nombre@empresa.com"
                    type="email"
                    required
                />
            </label>
        </div>

        <!-- Company Field -->
        <label class="flex flex-col gap-2.5">
            <span
                class="text-gray-900 dark:text-gray-100 text-sm font-bold ml-1"
                >Empresa / Organización</span
            >
            <input
                class="flex w-full rounded-2xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 px-5 py-4 text-base text-gray-900 dark:text-white placeholder:text-gray-400 focus:border-cyan-600 focus:ring-2 focus:ring-cyan-600/20 transition-all outline-none font-normal font-display"
                placeholder="Nombre de tu empresa"
                type="text"
            />
        </label>

        <!-- Message Field -->
        <label class="flex flex-col gap-2.5">
            <span
                class="text-gray-900 dark:text-gray-100 text-sm font-bold ml-1"
                >Cuéntame brevemente tu reto</span
            >
            <textarea
                class="flex w-full resize-none rounded-2xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 px-5 py-4 text-base text-gray-900 dark:text-white placeholder:text-gray-400 focus:border-cyan-600 focus:ring-2 focus:ring-cyan-600/20 transition-all outline-none font-normal font-display"
                placeholder="¿Qué problema necesitas resolver? ¿Cuál es el alcance esperado?"
                rows="5"
                required></textarea>
        </label>

        <div class="pt-2">
            <button
                type="submit"
                class="w-full md:w-auto min-w-[240px] flex cursor-pointer items-center justify-center gap-3 overflow-hidden rounded-2xl bg-cyan-700 dark:bg-cyan-600 text-white font-bold h-16 px-10 hover:bg-cyan-800 dark:hover:bg-cyan-500 active:scale-[0.98] transition-all shadow-xl shadow-cyan-900/20"
            >
                <span>Solicitar diagnóstico inicial</span>
                <span class="material-symbols-outlined text-base"
                    >arrow_forward</span
                >
            </button>
            <p
                class="text-sm text-gray-500 dark:text-gray-400 mt-5 font-normal flex items-center gap-2 justify-center md:justify-start font-display"
            >
                <span class="material-symbols-outlined text-cyan-600 text-xl"
                    >schedule</span
                >
                Respuesta garantizada en menos de 24 horas laborables.
            </p>
        </div>
    </form>
</div>
