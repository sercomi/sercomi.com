---
const cases = [
  {
    category: "FINTECH & AUTOMATION",
    title: "Procesamiento Inteligente de Documentos",
    description:
      "Desarrollo de un sistema híbrido que utiliza OCR tradicional combinado con GPT-4 para extraer, clasificar y validar datos de facturas financieras complejas con un 99.8% de precisión.",
    result: "40% Reducción de Costos",
    resultIcon: "trending_up",
    tags: ["Python", "AWS Textract", "LangChain"],
    image: "https://images.unsplash.com/photo-1551288049-bbda486687d3?q=80&w=2070&auto=format&fit=crop",
    accent: "cyan",
  },
  {
    category: "ECOMMERCE LOGISTICS",
    title: "Orquestador de Inventario Predictivo",
    description:
      "Implementación de un sistema de agentes autónomos que monitorea niveles de stock en tiempo real y genera órdenes de compra predictivas basadas en tendencias históricas y estacionales.",
    result: "20h Ahorradas / Semana",
    resultIcon: "timer",
    tags: ["Node.js", "n8n", "OpenAI API"],
    image: "https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?q=80&w=2070&auto=format&fit=crop",
    accent: "indigo",
  },
];
---

<section
  id="casos-de-uso"
  class="py-24 px-6 lg:px-20 w-full bg-gray-50 dark:bg-gray-800/30 border-y border-gray-100 dark:border-gray-800"
>
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col mb-16 items-center text-center">
      <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">
        Casos de Uso
      </h2>
      <p class="text-gray-600 dark:text-gray-400 max-w-xl font-medium">
        Resultados tangibles donde la ingeniería sólida se encuentra con la
        inteligencia artificial.
      </p>
    </div>

    <div class="flex flex-col gap-24">
      {
        cases.map((item, index) => (
          <div
            class={`flex flex-col lg:flex-row gap-12 lg:gap-20 items-center group ${index % 2 !== 0 ? "lg:flex-row-reverse" : ""}`}
          >
            <!-- Image Container -->
            <div class="w-full lg:w-1/2 relative rounded-2xl overflow-hidden shadow-2xl shadow-gray-200/50 dark:shadow-none border border-gray-100 dark:border-gray-700 bg-white dark:bg-gray-900">
              <div class="aspect-video bg-gray-100 dark:bg-gray-800 overflow-hidden">
                <img
                  src={item.image}
                  alt={item.title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105 opacity-90 group-hover:opacity-100"
                />
              </div>

              <!-- Overlay Badge -->
              <div
                class={`absolute bottom-6 ${index % 2 !== 0 ? "right-6" : "left-6"} z-20 bg-white/95 dark:bg-gray-900/95 backdrop-blur border border-gray-100 dark:border-gray-700 px-4 py-2.5 rounded-xl flex items-center gap-3 shadow-xl`}
              >
                <span
                  class={`material-symbols-outlined ${item.accent === "cyan" ? "text-cyan-600 dark:text-cyan-400" : "text-indigo-600 dark:text-indigo-400"}`}
                >
                  {item.resultIcon}
                </span>
                <span class="text-sm font-bold text-gray-900 dark:text-white tracking-tight">
                  {item.result}
                </span>
              </div>
            </div>

            <!-- Content Container -->
            <div class="w-full lg:w-1/2 flex flex-col gap-6">
              <span
                class={`text-xs font-bold tracking-[0.2em] uppercase ${item.accent === "cyan" ? "text-cyan-700 dark:text-cyan-400" : "text-indigo-600 dark:text-indigo-400"}`}
              >
                {item.category}
              </span>
              <h3 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white leading-tight">
                {item.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 leading-relaxed text-lg">
                {item.description}
              </p>

              <div class="flex flex-wrap gap-2 pt-2">
                {item.tags.map((tag) => (
                  <span class="px-3 py-1 text-[10px] font-bold uppercase tracking-wider bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg text-gray-500 dark:text-gray-400 shadow-sm">
                    {tag}
                  </span>
                ))}
              </div>

              <a
                href="#"
                class={`inline-flex items-center gap-2 font-bold hover:underline mt-4 ${item.accent === "cyan" ? "text-cyan-700 dark:text-cyan-400" : "text-indigo-600 dark:text-indigo-400"}`}
              >
                Leer caso completo
                <span class="material-symbols-outlined text-sm">
                  arrow_outward
                </span>
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
