    }

    .blob-1 {
        background: radial-gradient(
            circle,
            var(--color-indigo-500) 0%,
            transparent 70%
        );
        filter: blur(100px);
    }

    .blob-2 {
        background: radial-gradient(
            circle,
            var(--color-cyan-500) 0%,
