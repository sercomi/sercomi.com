---
const engineeringSkills = [
    {
        icon: "hub",
        title: "Diseño de Sistemas",
        description:
            "Desarrollo de microservicios desacoplados, implementación de patrones de diseño (DDD, CQRS) y estrategias de escalabilidad horizontal para alta demanda.",
    },
    {
        icon: "cloud_sync",
        title: "Arquitecturas Distribuidas",
        description:
            "Sistemas resilientes gestionados por eventos. Experiencia profunda con Kafka y RabbitMQ, garantizando tolerancia a fallos y consistencia eventual.",
    },
    {
        icon: "api",
        title: "Integración de APIs",
        description:
            "Diseño de contratos robustos (OpenAPI), implementaciones REST y GraphQL eficientes, y orquestación segura de servicios de terceros.",
    },
    {
        icon: "verified_user",
        title: "Clean Code & QA",
        description:
            "Obsesión por la mantenibilidad. TDD/BDD, pipelines de CI/CD optimizados y reducción proactiva de deuda técnica.",
    },
];
---

<div class="flex flex-col gap-6 group">
    <div
        class="flex items-center gap-3 border-b border-gray-100 dark:border-gray-800 pb-4 mb-2"
    >
        <span
            class="material-symbols-outlined text-cyan-700 dark:text-cyan-400 text-3xl"
            >architecture</span
        >
        <h3
            class="text-2xl font-bold text-gray-900 dark:text-white font-heading"
        >
            Base Sólida: Ingeniería
        </h3>
    </div>

    <div class="grid grid-cols-1 gap-4">
        {
            engineeringSkills.map((skill) => (
                <div class="p-6 border border-gray-100 dark:border-gray-800 rounded-xl bg-white dark:bg-gray-900 hover:border-cyan-700/40 dark:hover:border-cyan-400/40 hover:shadow-sm transition-all duration-300">
                    <div class="flex items-start gap-4">
                        <div class="bg-cyan-50 dark:bg-cyan-900/30 p-2 rounded text-cyan-700 dark:text-cyan-400 shrink-0">
                            <span class="material-symbols-outlined">
                                {skill.icon}
                            </span>
                        </div>
                        <div>
                            <h4 class="font-bold text-lg text-gray-900 dark:text-white mb-1 font-heading">
                                {skill.title}
                            </h4>
                            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed font-body font-normal">
                                {skill.description}
                            </p>
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</div>
