---
const aiSkills = [
    {
        icon: "integration_instructions",
        title: "Spec-driven Development + IA",
        description:
            "Desarrollo guiado por especificaciones apoyado con IA. Definición precisa de contratos y lógica para la generación de código determinista, reduciendo ambigüedad y errores.",
    },
    {
        icon: "smart_toy",
        title: "LLMs & Prompt Engineering",
        description:
            "Integración programática de GPT-4 y Claude. Técnicas avanzadas de RAG (Retrieval-Augmented Generation) y fine-tuning ligero para dominios específicos.",
    },
    {
        icon: "account_tree",
        title: "Automatización de Procesos",
        description:
            "Orquestación de flujos de trabajo complejos en n8n y Make. Transformación de lógica de negocio manual en pipelines autónomos y audibles.",
    },
    {
        icon: "psychology",
        title: "Agentes Inteligentes",
        description:
            "Desarrollo de agentes autónomos con LangChain y AutoGPT capaces de razonar, usar herramientas y ejecutar tareas secuenciales.",
    },
];
---

<div class="flex flex-col gap-6 group">
    <div
        class="flex items-center gap-3 border-b border-gray-100 dark:border-gray-800 pb-4 mb-2"
    >
        <span
            class="material-symbols-outlined text-cyan-700 dark:text-cyan-400 text-3xl"
            >neurology</span
        >
        <h3
            class="text-2xl font-bold text-gray-900 dark:text-white font-heading"
        >
            Capa de IA y Automatización
        </h3>
    </div>

    <div class="grid grid-cols-1 gap-4">
        {
            aiSkills.map((skill) => (
                <div class="p-6 border border-gray-100 dark:border-gray-800 rounded-xl bg-white dark:bg-gray-900 hover:border-indigo-700/40 dark:hover:border-indigo-400/40 hover:shadow-sm transition-all duration-300">
                    <div class="flex items-start gap-4">
                        <div class="bg-indigo-50 dark:bg-indigo-900/30 p-2 rounded text-indigo-600 dark:text-indigo-400 shrink-0">
                            <span class="material-symbols-outlined">
                                {skill.icon}
                            </span>
                        </div>
                        <div>
                            <h4 class="font-bold text-lg text-gray-900 dark:text-white mb-1 font-heading">
                                {skill.title}
                            </h4>
                            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed font-body font-normal">
                                {skill.description}
                            </p>
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</div>
